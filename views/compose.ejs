<%- include("partials/header") -%>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
    <div class="form-group">
      <label for="postTitle">Title</label>
      <input type="text" class="form-control" name="postTitle" id="postTitle" required>
    </div>
    <div class="form-group">
      <label for="postBody">Post</label>
      <textarea class="form-control" name="postBody" id="postBody" rows="5" required></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>
<%- include("partials/footer") -%>